{
  "name": "util.filelist",
  "version": "0.0.29",
  "author": "jmquigley <jmquigley@outlook.com>",
  "description": "Reads a file list and returns it as an array of values.",
  "main": "./index.js",
  "types": "./index.d.ts",
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jmquigley/util.filelist"
  },
  "bugs": {
    "url": "https://github.com/jmquigley/util.filelist/issues"
  },
  "engines": {
    "node": ">=7.x"
  },
  "dependencies": {
    "fs-extra": "^7.0.1",
    "util.rstrip": "0.0.40"
  },
  "devDependencies": {
    "@types/fs-extra": "5.0.4",
    "@types/node": "^10.12.18",
    "@types/uuid": "^3.4.4",
    "coveralls": "^3.0.2",
    "expand-home-dir": "github:jmquigley/expand-home-dir",
    "jest": "^23.6.0",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2",
    "typescript-babel-jest": "^1.0.5",
    "util.pkgwrap": "^0.0.94",
    "uuid": "^3.3.2"
  },
  "pkgwrap": {
    "cleanup": [
      "index.d.ts",
      "index.js"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "json"
    ],
    "notify": false,
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
			"__tests__/helpers"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "transform": {
      "^.+\\.ts?$": "typescript-babel-jest"
    },
    "verbose": false
  },
  "scripts": {
    "all": "yarn install && yarn run build && yarn test",
    "build": "yarn run clean && yarn run lint && pkgwrap --build",
    "clean": "pkgwrap --clean",
    "coverage": "pkgwrap --coverage --jest",
    "lint": "pkgwrap --lint",
    "prepublishOnly": "yarn run all",
    "report": "pkgwrap --reporting",
    "test": "pkgwrap --testing --jest"
  }
}
